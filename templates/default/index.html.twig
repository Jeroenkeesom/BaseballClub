{% extends 'base.html.twig' %}

{% block title %}Baseball Club!{% endblock %}

{% block body %}
    {{ parent() }}
<div class="container-fluid">
        <div class="row">
            <div class="col s12">
                <div class="card ">
                    <div class="card-content">
                        <span class="card-title">Team Statistics </span>
                        <table class="striped highlight responsive-table bordered">
                            <thead>
                            <tr>
                                <th>Player</th>
                                <th>IP%</th>
                                <th>GP#</th>
                                <th>GAv</th>
                                <th>IP#</th>
                                <th>IA#</th>
                                <th>TR%</th>
                                <th>I2T</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for key in calculatedPlayerResult %}
                            <tr>
                                <td>{{ key.player.firstName }} #{{ key.player.shirtNumber }}</td>
                                <td>{{ key.ips|round(0, 'floor') }}%</td>
                                <td>{{ key.gp }}</td>
                                <td>{{ key.gpr }}</td>
                                <td>{{ key.ipn }}</td>
                                <td>{{ key.ipa }}</td>
                                <td>{{ key.tr |round(0, 'floor') }}%</td>
                                <td><strong>{{ key.i2t |round(3, 'floor') }}</strong></td>
                            </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
</div>
{% endblock %}
