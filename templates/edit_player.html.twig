{% extends 'base.html.twig' %}
{% if player.id == 0 %}
    {% set text = 'new' %}
{% else %}
    {% set text = 'edit' %}
{% endif %}

{% block title %}{{ text }} player - Baseball Club!{% endblock %}

{% block nav_path %}
    <a href="{{ path('default') }}" class="breadcrumb">&nbsp; Baseball Club!</a>
    <span class="breadcrumb">{{ text }} Player</span>
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="card ">
                    <div class="card-content">
                        <span class="card-title">{{ text }} user </span>
                        {{ form(form) }}
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
