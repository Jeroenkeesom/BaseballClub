{% extends 'base.html.twig' %}
{% block title %}Event Overview - Baseball Club!{% endblock %}

{% block nav_path %}
    <a href="{{ path('default') }}" class="breadcrumb">&nbsp; Baseball Club!</a>
    <span class="breadcrumb">Event Overview</span>
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="card ">
                    <div class="card-content">
                        <span class="card-title">Event Overview </span>
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Date</th>
                                <th>Type</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for event in events %}
                                <tr>
                                    <td><a href="{{ path('overviewDetail', {'eventId': event.id}) }}"> {{ event.date | date('d-M-Y') }} </a></td>
                                    <td><a href="{{ path('overviewDetail', {'eventId': event.id}) }}"> {{ event.type.name }}</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
