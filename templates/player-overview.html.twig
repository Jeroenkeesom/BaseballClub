{% extends 'base.html.twig' %}

{% block title %}players - Baseball Club!{% endblock %}

{% block nav_path %}
    <a href="{{ path('default') }}" class="breadcrumb">&nbsp; Baseball Club!</a>
    <span class="breadcrumb">Player Overview</span>
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="card ">
                    <div class="card-content">
                        <span class="card-title">Players: </span>
                        <table class="striped">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th>Nick</th>
                                <th>Number</th>
                                <th>Pos</th>
                                <th>active since</th>
                                <th>Type</th>
                                <th>Team</th>
                                <th>&nbsp;</th>
                            </tr>
                            </thead>
                            {% for player in players %}
                                <tr>
                                    <td>{{ player.firstName }} {{ player.lastName }}</td>
                                    <td>{{ player.nickName }}</td>
                                    <td>#{{ player.shirtNumber }}</td>
                                    <td>{{ player.preferredPosition }}</td>
                                    <td>{{ player.activeSince|date('d.m.Y') }}</td>
                                    {% if (player.playerType ==1 ) %}
                                        <td>trainee</td>
                                    {% else %}
                                        <td>Gamer</td>
                                    {% endif %}
                                    <td>{{ player.team.name }}</td>
                                    <td><a href="{{ path('playerEdit', {'id' : player.id}) }}" class="btn orange">Edit</a></td>
                                </tr>
                            {% endfor %}
                        </table>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
