{% extends 'base.html.twig' %}

{% block title %}new training - Baseball Club!{% endblock %}

{% block nav_path %}
    <a href="{{ path('default') }}" class="breadcrumb">&nbsp; Baseball Club!</a>
    <span class="breadcrumb">New training</span>
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="card ">
                    <div class="card-content">
                        <span class="card-title">Register Presence </span>
                        <form action="{{ path('register-training-presence') }}" method="post" class="card-content">
                            <div class="event-form">
                                <h2 class="h2">Who joined this training?</h2>
                                {% for player in players %}
                                    <div class="row">
                                        <div class="input-field col s12 form">
                                            <label>
                                                <input type="checkbox" name="present[{{ player.id }}]" id="present">
                                                <span>
                                                    {{ player.firstName }} {{ player.lastName }}
                                                </span>
                                            </label>
                                        </div>

                                    </div>

                                {% endfor %}
                                <input type="hidden" name="gameId" value="{{ game_id }}">
                                <div class="row">
                                    &nbsp;
                                </div>
                                <div class="row">
                                    &nbsp;
                                </div>

                                <div class="row">
                                    <button class="buttons btn green" value="submit" name="submit">Save</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
