{% extends 'base.html.twig' %}

{% block title %}new game - Baseball Club!{% endblock %}

{% block nav_path %}
    <a href="{{ path('default') }}" class="breadcrumb">&nbsp; Baseball Club!</a>
    <span class="breadcrumb">New Game</span>
{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class="col s12">
                <div class="card ">
                    <div class="card-content">
                        <span class="card-title">Register Presence </span>
                        <form action="{{ path('register-game-presence') }}" method="post" class="card-content">
                            <div class="event-form">
                                {% for player in players %}
                                    {{ player.firstName }} {{ player.lastName }}
                                    <div class="row">
                                        <div class="input-field col s12 form">
                                            <input type="number" min="0" max="{{ max_inning }}" name="no-of-innings[{{ player.id }}]" value="{{ max_inning }} id=" noOfInnings" required="required">
                                            <label class="input required active" for="noOfInnings">No of Inn played? </label>
                                        </div>
                                        <hr/>
                                    </div>

                                {% endfor %}
                                <input type="hidden" name="gameId" value="{{ game_id }}">
                                <button class="buttons btn green" value="submit" name="submit">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
